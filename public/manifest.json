{
  "manifest_version": 3,
  "name": "Bookmark Manager",
  "version": "1.0.1",
  "description": "一款强大的书签管理工具，帮助你更高效地组织和管理 Chrome 书签。支持快速搜索、分类、快捷键操作等功能。",
  "permissions": [
    "bookmarks",
    "storage",
    "commands",
    "tabs",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "icons/kpbl.png",
      "32": "icons/kpbl.png",
      "48": "icons/kpbl.png",
      "128": "icons/kpbl.png"
    }
  },
  "icons": {
    "16": "icons/kpbl.png",
    "32": "icons/kpbl.png",
    "48": "icons/kpbl.png",
    "128": "icons/kpbl.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+K",
        "mac": "Alt+K"
      },
      "description": "激活扩展程序"
    },
    "quick_search": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "快速搜索书签"
    }
  },
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/bookmark-manager",
  "minimum_chrome_version": "88",
  "offline_enabled": true,
  "options_page": "index.html#/settings",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}